{
  "manifest_version": 3,
  "name": "TrafficTube",
  "description": "Adds a mini Driver Budgie Point tag to YouTube videos with a score based on engagement and video quality.",
  "version": "1.0",
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [],
  "action": {
    "default_icon": "icon.png",
    "default_title": "TrafficTube"
  }
}
